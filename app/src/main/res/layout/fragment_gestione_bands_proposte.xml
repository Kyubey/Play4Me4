<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:background="@color/colorGray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="4dp">
        <ImageView
            android:id="@+id/image_band"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/icona_login"
            android:src="@mipmap/ic_calendar" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toEndOf="@id/image_band">


    <TextView
        android:id="@+id/name_band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="2dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="14sp"
        android:text="Nome Band"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:visibility="visible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_accept"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Accetta"
            style="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button_refuse"
            style="?android:textAppearanceMedium"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/my_button_bg"

            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:text="Rifiuta"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>