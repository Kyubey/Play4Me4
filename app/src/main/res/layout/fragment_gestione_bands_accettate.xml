<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:background="@color/colorGray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".GestioneBands$PlaceholderFragment"
    android:layout_marginBottom="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="4dp">
        <ImageView
            android:id="@+id/image_band"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/icona_login"
            android:src="@mipmap/ic_calendar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/image_band">


            <TextView
                android:id="@+id/name_band"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=""
                android:layout_marginTop="15dp"
                android:layout_marginStart="2dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="14sp"
                android:text="Nome Band"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                android:visibility="visible" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginTop="7dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button_band"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Licenzia"
                    style="?android:textAppearanceMedium"
                    android:textStyle="bold"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:background="@color/colorNegativeButton"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>